<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/tab_pserna_info"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/btn_normal" >

            <ImageView
                android:id="@+id/img_PersonalShenSu_back"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_PersonalIdentif_back"
                android:text="返回"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="申诉"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_shensu_danhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="任务单号："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_shensu_danhao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_shensu_danhao"
                android:hint="需要申诉的任务单号" />

            <TextView
                android:id="@+id/txt_shensu_neirong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_shensu_danhao"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="申诉内容："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_shensu_neirong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="10"
                android:layout_below="@id/txt_shensu_neirong"
                android:layout_marginTop="10dp"
                android:maxLines="10" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_shensu_neirong"
                android:layout_marginTop="10dp"
                android:text="提示：如若对任务存在疑问，可首先联系任务领取人员协商解决。如若无法解决或任务领取人无法处理。可提交如上申诉。顺带客服将在2个工作日内对您申诉进行处理"
                android:textColor="#AEAEAE"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#7CD43A"
        android:text="提  交"
        android:textSize="18sp" />

</RelativeLayout>